<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:text="Select whose turn "
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/radio_O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_person_black_24dp"
        android:onClick="SelectFirstTurn"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/radio_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radio_O"
        android:layout_alignBottom="@+id/radio_O"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_person_outline_black_24dp"
        android:onClick="SelectFirstTurn"
        android:textColorHighlight="@android:color/black"
        android:textSize="24sp" />
</RelativeLayout>