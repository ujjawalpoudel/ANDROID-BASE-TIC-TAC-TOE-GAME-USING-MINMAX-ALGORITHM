<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Select whose turn"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <RadioButton
        android:id="@+id/radio_X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="85dp"
        android:drawableBottom="@drawable/ic_laptop_black_24dp"
        android:onClick="onRadioButtonClicked"
        android:text="COMPUTER"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/radio_O"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radio_X"
        android:layout_alignBottom="@+id/radio_X"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:drawableBottom="@drawable/ic_mood_black_24dp"
        android:onClick="onRadioButtonClicked"
        android:text="HUMAN"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/background_dark"
        android:textSize="24sp" />
</RelativeLayout>