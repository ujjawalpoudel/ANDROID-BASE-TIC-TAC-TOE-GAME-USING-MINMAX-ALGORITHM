<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.ujjawalpoudel.ttt_project.MainActivity">


    <Button
        android:id="@+id/SinglePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_person_black_24dp"
        android:onClick="optionSelect"
        android:text="SINGLE PLAYER"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/MultiPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SinglePlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_group_black_24dp"
        android:onClick="optionSelect"
        android:text="MULTIPLAYER"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MultiPlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@color/colorPrimaryDark"
        android:drawableBottom="@drawable/ic_exit_to_app_black_24dp"
        android:onClick="optionSelect"
        android:text="EXIT"
        android:textColor="@android:color/black"
        android:textSize="24sp" />
</RelativeLayout>
